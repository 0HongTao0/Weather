<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hongtao.weather.activity.WeatherActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:layout_margin="3sp">

            <TextView
                android:id="@+id/weather_tv_where"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="3sp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:gravity="center"
                android:text="城市"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/weather_tv_today"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="3sp"
                android:layout_weight="2"
                android:background="@android:color/background_light"
                android:text="云 ：            温度 ： \n风向：         风级 ："
                android:textSize="23sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_margin="3sp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dip"
                android:background="@android:color/background_light"
                android:gravity="center"
                android:text="未来几天的天气状况"/>

            <TextView
                android:id="@+id/weather_tv_forecast1"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_margin="3sp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:gravity="center"/>

            <TextView
                android:id="@+id/weather_tv_forecast2"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_margin="3sp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:gravity="center"/>

            <TextView
                android:id="@+id/weather_tv_forecast3"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_margin="3sp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dip"
                android:background="@android:color/background_light"
                android:gravity="center"
                android:text="未来几小时的天气状况"/>

            <ListView
                android:id="@+id/forecast_lv_weather"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/weatheractivity_bt_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请选择城市"/>


</LinearLayout>
